<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="@string/pref_key_image_sample_mode"
        android:title="@string/pref_title_image_sample_mode"
        android:defaultValue="@string/pref_default_image_sample_mode"
        android:entries="@array/pref_image_sample_mode_names"
        android:entryValues="@array/pref_image_sample_mode_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <EditTextPreference
        android:key="@string/pref_key_image_sample_size"
        android:title="@string/pref_title_image_sample_size"
        android:defaultValue="@string/pref_default_image_sample_size"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="@string/pref_key_intensity_calculation_mode"
        android:title="@string/pref_title_intensity_calculation_mode"
        android:defaultValue="@string/pref_default_intensity_calculation_mode"
        android:entries="@array/pref_intensity_calculation_mode_names"
        android:entryValues="@array/pref_intensity_calculation_mode_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <EditTextPreference
        android:key="@string/pref_key_median_filter_window_size"
        android:title="@string/pref_title_median_filter_window_size"
        android:defaultValue="@string/pref_default_median_filter_window_size"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="@string/pref_key_demean_filter_window_size"
        android:title="@string/pref_title_demean_filter_window_size"
        android:defaultValue="@string/pref_default_demean_filter_window_size"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
